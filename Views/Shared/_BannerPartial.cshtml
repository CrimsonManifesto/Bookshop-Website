<style>
        .carousel-item {
        max-height: auto; 
        max-width: 100%;
        object-fit: cover
    }

    .carousel-container {
        display: flex;
        flex-direction: row; 
        background-color: #F0F0F0;
    }


    .carousel {
        width: 100%; 
        max-width: 800px; 
    }

    .carousel-item img,
    .container img {

        width: 100%; 
        height: auto;
        border-radius: 15px; 
    }
    .small-container
    {
        width:max-content;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 50px; /* Đặt kích thước cho các nút */
        height: 50px; /* Đặt kích thước cho các nút */
        border-radius: 50%; /* Đặt border-radius để tạo hình tròn */
        background-color: white; /* Màu nền cho các nút */
        display: flex;
        justify-content: center; /* Canh giữa nội dung theo chiều ngang */
        align-items: center; /* Canh giữa nội dung theo chiều dọc */
    }

    .carousel-control-prev {
        left: -56px; 
        top: 130px
    }

    .carousel-control-next {
        right: -56px;
        top: 130px
    }

        @@media only screen and (max-width: 768px) {
        .hidden-on-mobile {
            width:10%;
            display: none;
        }
            .carousel-control-prev {
            display: none;
    }

    .carousel-control-next {
            display: none;
    }

    }

    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
        background-size: 15px;
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
        background-size:15px;
    }

</style>
<div class="container carousel-container" style="padding-inline-start:80px; padding-block-end:30px">
    <!--Slide images should be 800x300-->

    <div id="carouselExample" class="carousel slide" data-bs-ride="true" data-bs-interval="2000">
        <div class="carousel-inner" style="max-width:800px">
            <div class="carousel-item active">
                <img src="/assets/img/slide/slide1.png" alt="Slide 1" style="max-height:300px;max-width:800px">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/slide/slide2.png" alt="Slide 2" style="max-height:300px;max-width:800px">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/slide/slide3.png" alt="Slide 3" style="max-height:300px;max-width:800px">
            </div>
        </div>
        <button class="carousel-control-prev btn-light shadow-none" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next btn-light shadow-none" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Small images should be 300x150-->
    <div class="container small-container hidden-on-mobile">
        <div class="container hidden-on-mobile" >
            <img src="/assets/img/normal/image1.png" style="max-width:300px;max-height:150px">
        </div>
        <div class="container hidden-on-mobile" ">
            <img src="/assets/img/normal/image2.png" style="max-width:300px;max-height:150px">
        </div>
    </div>
</div>
