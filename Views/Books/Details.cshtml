@model Bookshop_Website.Models.Books

@{
    ViewData["Title"] = "Details";
}


<div class="container">

    <div class="row">
        @* Book image *@
        <div class="col-4" style="background-color:white">
            <div class="row" id="imageRow">
            <img src="@Model.ImageUrl" alt="@Model.Title" id="image"/>
            </div>
            <div class="row">
                <div class="col">
                   @*  ------------------------> need improve  *@
                    <form asp-action="AddtoCart" asp-route-id="@Model?.BookId" method="post" style="display:inline;">
                        <button type="submit" class="btn interactBtn" style="color:white; background-color:red">
                            Buy
                        </button>
                    </form>
                </div>
                <div class="col">
                    <form asp-action="AddtoCart" asp-route-id="@Model?.BookId" method="post" style="display:inline;">
                        <button type="submit" class="btn interactBtn" style="color:red;border-width:2px;border-color:red">
                            <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.BookId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model?.BookId">Delete</a>
                </div>
            }

        </div>
        <div class="col overflow-auto" style="height:45rem">
            @* Book title and price *@
            <div class="col" style="background-color:white" id="infoCol">
                <h1 style="font-weight:bold">@Html.DisplayFor(Model => Model.Title)</h1>
                <h1 style="color:red;font-weight:bold">@Html.DisplayFor(Model => Model.Price)</h1>
                <h3>@Html.DisplayFor(Model => Model.Author)</h3>
            </div>

            @* detail info *@
            <div class="col" style="background-color:white" id="infoCol">
                <h3 id="sectionHeader">Detail information</h3>
                <div class="row">
                    <div class="col">
                        <p id="infoText">@Html.DisplayNameFor(Model => Model.Author)</p>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(Model => Model.Author)

                    </div>
                </div>
                <div class="row"> 
                    <div class="col">
                        <p id="infoText">@Html.DisplayNameFor(Model => Model.Publisher)</p>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(Model => Model.Publisher)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p id="infoText">@Html.DisplayNameFor(Model => Model.Genre)</p>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(Model => Model.Genre)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p id="infoText">@Html.DisplayNameFor(Model => Model.Language)</p>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(Model => Model.Language)

                    </div>
                </div>
            </div>


            @* description *@
            <div class="col" style="background-color:white" id="infoCol">
                <h3 id="sectionHeader">Description</h3>
                <p>@Html.DisplayFor(Model => Model.Description)</p>
            </div>

        </div>
</div>
</div>















