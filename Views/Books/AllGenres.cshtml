@model List<string>

@{
    ViewData["Title"] = "All Book Genres";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Explore All Book Genres</h2>

    <div class="row">
        @foreach (var genre in Model)
        {
            <div class="col-md-4 col-lg-3 mb-3">
                <div class="card genre-card shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="fas fa-book-open fa-2x text-primary mb-2"></i>
                        <h5 class="card-title">@genre</h5>
                        <a asp-controller="Books" asp-action="GenresShow" asp-route-SearchPhrase="@genre" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .genre-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 12px;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
        position: relative;
        overflow: hidden;
    }

    .genre-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

    .genre-card h5 {
        font-weight: bold;
        color: #333;
    }

    .genre-card i {
        color: #007bff;
    }
</style>

