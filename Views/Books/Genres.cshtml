@model IEnumerable<string>

<h2>Genres</h2>

<div>
    @foreach (var genre in Model)

    {
        <form asp-action="GenresShow" method="post" style="display:inline;">
            <input type="hidden" name="SearchPhrase" value="@genre" />
            <button type="submit" class="btn btn-primary">@genre</button>
        </form>
    }
</div>
