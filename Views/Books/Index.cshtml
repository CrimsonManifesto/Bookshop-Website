@model IEnumerable<Bookshop_Website.Models.Books>

@{
    ViewData["Title"] = "Index";
    ViewData["ShowBanner"] = true;

}

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<div class="container" id="bookHeader">All Books</div>

<div class="container" style="background-color:white">

    <div class="container" id="cardContainer">
        @foreach (var item in Model)
        {
            <div class="card border-0 pt-3" id="bookCard">
                <a asp-action="Details" asp-route-id="@item.BookId">
                    <img class="rounded float-start" src="@item.ImageUrl" alt="Image for @item.Title" style="width: 150px; height: 220px;" />
                </a>        
                <div class="card-body w-100">
                    @Html.ActionLink(item.Title, "Details", new { id = item.BookId }, new { @class = "custom-card-title", title=item.Title})
                </div>
                <div class="w-100 px-3">

                    <h5 class="price">@item.Price.ToString("C")</h5>
                </div>
            </div>

        }
    </div>
</div>

<style>
    #cardContainer {
        background-color: white;
        display: flex;
        flex-direction: row;
        padding-inline: 10px;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    #bookCard {
        width: 14rem;
        height: 21rem;
        margin-top: 1rem;
        margin-inline: 0.94rem;
        align-items: center;
    }

        #bookCard:hover {
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }

    #bookHeader {
        display: flex;
        flex-direction: row;
        background-color: #FCDDEF;
        font-size: 2rem;
        justify-content: center;
        font-weight: bold;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px
    }

    #textAuthor {
        font-size: 0.8rem
    }

    .custom-card-title {
        color: black;
        text-decoration: none;
        display: -webkit-box;
        -webkit-box-orient: vertical; 
        -webkit-line-clamp: 2; 
        overflow: hidden; 
        text-overflow: ellipsis; 
        width: 100%; 
        font-size:15px
    }


        .custom-card-title:hover {
            color: black;
            text-decoration: none;
        }

    .price {
        color: red;
        font-weight:bold;

    }

    .card-body {
        height: 500px;
        padding-bottom: 0;
    }


</style>